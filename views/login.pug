extends base

block content
  main.main
    .login-form
      h2.heading-secondary.ma-bt-lg 계정을 로그인하세요
      form.form.form--login
        .form__group
          label.form__label(for='email') 이메일주소
          input#email.form__input(type='email', placeholder='you@example.com', required)
        .form__group.ma-bt-md
          label.form__label(for='password') 비밀번호
          input#password.form__input(type='password', placeholder='••••••••', required, minlength='8')
        .form__group
          button.btn.btn--green 로그인